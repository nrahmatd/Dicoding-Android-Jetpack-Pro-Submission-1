<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:layout_width="@dimen/distance_100dp"
                android:layout_height="@dimen/distance_100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/distance_50dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/the_movie_db_icon" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_5dp"
                android:layout_marginRight="@dimen/distance_5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/distance_16dp"
                app:cardElevation="@dimen/distance_2dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/distance_5dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_normal_18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/version_app"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_normal" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/academy"
                        android:textColor="@android:color/white"
                        android:textStyle="italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_5dp"
                    android:text="@string/powered_by" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/distance_100dp"
                        android:layout_height="@dimen/distance_100dp"
                        android:layout_marginTop="@dimen/distance_5dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardUseCompatPadding="true">

                    <ImageView
                            android:layout_width="@dimen/distance_85dp"
                            android:layout_height="@dimen/distance_85dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_100dp"
                        android:layout_marginTop="@dimen/distance_5dp"
                        android:layout_toRightOf="@+id/profileImage"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardUseCompatPadding="true">

                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TableRow>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/distance_10dp"
                                    android:layout_marginTop="@dimen/distance_20dp"
                                    android:layout_weight="1"
                                    android:text="@string/developer"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/text_medium"
                                    android:textStyle="bold" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/distance_10dp"
                                    android:layout_marginTop="@dimen/distance_10dp"
                                    android:text="@string/android_enthusiast"
                                    android:textColor="@android:color/white" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/thanks_you"
                android:textAlignment="center"
                android:textSize="@dimen/text_large_25sp"
                android:textStyle="bold" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_10dp"
                android:layout_marginRight="@dimen/distance_10dp"
                android:adjustViewBounds="true"
                android:elevation="@dimen/distance_2dp"
                android:padding="@dimen/distance_10dp"
                android:src="@drawable/dicoding" />

    </LinearLayout>

</ScrollView>