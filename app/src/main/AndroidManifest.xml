<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.dicoding.nrahmatd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".picodiploma.moviecatalogue.app.MovieApp"
            android:allowBackup="true"
            android:icon="@drawable/the_movie_db_icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/the_movie_db_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.dicoding.nrahmatd.picodiploma.moviecatalogue.view.activity.AboutActivity" />
        <activity
                android:name="com.dicoding.nrahmatd.picodiploma.moviecatalogue.view.activity.SplashScreenActivity"
                android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dicoding.nrahmatd.picodiploma.moviecatalogue.MainActivity"
                android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name="com.dicoding.nrahmatd.picodiploma.moviecatalogue.view.activity.DetailActivity" />
    </application>

</manifest>